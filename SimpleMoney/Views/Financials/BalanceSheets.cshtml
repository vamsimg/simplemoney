@model SimpleMoney.Models.BalanceSheet

@{
    ViewBag.Title = "ImportData";
}





<h2>Balance Sheet</h2>

<h3>Assets</h3>

<table>
    <tr>
        <th>Type</th><th>Details</th><th>Account Code</th><th>Amount</th>
    </tr>
    
    @foreach (var entry in Model.BalanceSheetEntries.Where(e=>e.isAsset == true))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => entry.Type )
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.Amount)
            </td>                        
        </tr>
    }
</table>

<h3>Liabilities</h3>

<table>
    <tr>
        <th>Type</th><th>Details</th><th>Account Code</th><th>Amount</th>
    </tr>
    
    @foreach (var entry in Model.BalanceSheetEntries.Where(e=>e.isAsset == false))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => entry.Type )
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entry.Amount)
            </td>                         
        </tr>
    }
</table>




